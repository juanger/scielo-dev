<h1>Listing countries</h1>

<table>
  <tr>
  <% for column in Country.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for country in @countries %>
  <tr>
  <% for column in Country.content_columns %>
    <td><%=h country.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => country %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => country %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => country }, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @country_pages.current.previous } if @country_pages.current.previous %>
<%= link_to 'Next page', { :page => @country_pages.current.next } if @country_pages.current.next %> 

<br />

<%= link_to 'New country', :action => 'new' %>
