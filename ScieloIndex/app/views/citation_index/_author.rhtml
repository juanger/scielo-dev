  <tr>
    <%= "<td class=\"centered\">#{(@collection.index(author) + 1) + (30 * (params[:page] ? params[:page].to_i-1 : 0)) }</td>" if @ranked %>
    <td><%= author.as_human %></td>
    <td class="centered"><%= "#{author.citations || 0}" %></td>
    <td class="centered"><%= author.articles.map {|art| sc = art.cites.map {|c| c if (c.authors.inject(false) {|cond, au| cond || au.lastname.downcase == author.lastname.downcase })} }.flatten.compact.size %></td>
  </tr>
