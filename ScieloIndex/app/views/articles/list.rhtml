<h1>Listing articles</h1>

<table>
  <tr>
  <% for column in Article.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for article in @collection %>
  <tr>
  <% for column in Article.content_columns %>
    <td><%=h article.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => article %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => article %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => article }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
<div id="buttonsNavigator">
<%= link_to 'Previous page', { :page => @pages.current.previous }, :class => 'cssbutton' if @pages.current.previous %>
<%= link_to 'Next page', { :page => @pages.current.next }, :class => 'cssbutton' if @pages.current.next %> 
</div>
<br />
<div id="buttonsNavigator">
<%= link_to 'New article', {:action => 'new'}, :class => 'cssbutton' %>
</div>