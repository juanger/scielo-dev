<h1>Listing subjects</h1>

<table>
  <tr>
  <% for column in Subject.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>

<% for subject in @collection %>
  <tr>
  <% for column in Subject.content_columns %>
    <td><%=h subject.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => subject %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => subject %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => subject }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
<div id="buttonsNavigator">
<%= link_to 'Previous page', { :page => @pages.current.previous }, :class => 'cssbutton' if @pages.current.previous %>
<%= link_to 'Next page', { :page => @pages.current.next }, :class => 'cssbutton' if @pages.current.next %>
</div>
<br />
<div id="buttonsNavigator">
<%= link_to 'New subject', {:action => 'new'}, :class => 'cssbutton' %>
</div>