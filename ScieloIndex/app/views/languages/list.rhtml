<h1>Listing languages</h1>

<table>
  <tr>
  <% for column in Language.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>

<% for language in @collection %>
  <tr>
  <% for column in Language.content_columns %>
    <td><%=h language.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => language %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => language %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => language }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
<div id="buttonsNavigator">
<%= link_to 'Previous page', { :page => @pages.current.previous }, :class => 'cssbutton' if @pages.current.previous %>
<%= link_to 'Next page', { :page => @pages.current.next }, :class => 'cssbutton' if @pages.current.next %>
</div>
<br />
<div id="buttonsNavigator">
<%= link_to 'New language', :action => 'new' %>
</div>
