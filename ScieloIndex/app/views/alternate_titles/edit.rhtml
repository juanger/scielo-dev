<h1>Editing alternate_title</h1>

<% form_tag :action => 'update', :id => @record do %>
  <div id="containerForm">
    <%= render :partial => 'form' %>
  </div>
  <%= submit_tag 'Edit' %>
<% end %>

<div id="buttonsNavigator">
<%= link_to 'Show', :action => 'show', :id => @record %> |
<%= link_to 'Back', :action => 'list' %>
</div>
