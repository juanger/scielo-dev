<h1>Listing <%= @model.to_s.pluralize %></h1>

<table>
  <tr>
  <% for column in @model.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>

<% for record in @collection %>
  <tr>
  <% for column in @model.content_columns %>
    <td><%=h record.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => record %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => record %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => record }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
<div id="buttonsNavigator">
<%= will_paginate @collection %>
</div>
<br />
<div id="buttonsNavigator">
<%= link_to "New #{@model.to_s}", :action => 'new' %>
</div>
